{
  "app_name": {
    "type": "string",
    "required": true,
    "minLength": 1,
    "maxLength": 50
  },
  "version": {
    "type": "string",
    "required": true,
    "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
  },
  "database_type": {
    "type": "string",
    "required": false,
    "pattern": "^(postgresql|mysql|mongodb|redis)$",
    "default": "postgresql"
  },
  "database_host": {
    "type": "string",
    "required": false,
    "default": "localhost"
  },
  "database_port": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 65535,
    "default": 5432
  },
  "database_name": {
    "type": "string",
    "required": false,
    "default": "myapp"
  },
  "database_user": {
    "type": "string",
    "required": false,
    "default": "postgres"
  },
  "database_password": {
    "type": "string",
    "required": false
  },
  "connection_pool_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "connection_pool_max_connections": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 100,
    "default": 25
  },
  "connection_pool_min_connections": {
    "type": "number",
    "required": false,
    "min": 0,
    "max": 50,
    "default": 5
  },
  "connection_pool_idle_timeout": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 3600,
    "default": 300
  },
  "connection_pool_max_lifetime": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 7200,
    "default": 3600
  },
  "migration_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "migration_path": {
    "type": "string",
    "required": false,
    "default": "./migrations"
  },
  "migration_table": {
    "type": "string",
    "required": false,
    "default": "schema_migrations"
  },
  "migration_timeout": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 600,
    "default": 300
  },
  "backup_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "backup_schedule": {
    "type": "string",
    "required": false,
    "pattern": "^[0-9*]+ [0-9*]+ [0-9*]+ [0-9*]+ [0-9*]+$",
    "default": "0 2 * * *"
  },
  "backup_retention_days": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 365,
    "default": 30
  },
  "backup_compression_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "backup_encryption_enabled": {
    "type": "boolean",
    "required": false,
    "default": false
  },
  "replication_enabled": {
    "type": "boolean",
    "required": false,
    "default": false
  },
  "replication_mode": {
    "type": "string",
    "required": false,
    "pattern": "^(master_slave|master_master|cluster)$",
    "default": "master_slave"
  },
  "replication_slaves": {
    "type": "string",
    "required": false
  },
  "replication_sync_mode": {
    "type": "string",
    "required": false,
    "pattern": "^(sync|async|semi_sync)$",
    "default": "async"
  },
  "query_timeout": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 300,
    "default": 30
  },
  "connection_timeout": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 60,
    "default": 10
  },
  "statement_timeout": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 600,
    "default": 60
  },
  "idle_in_transaction_timeout": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 3600,
    "default": 300
  },
  "logging_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "logging_level": {
    "type": "string",
    "required": false,
    "pattern": "^(debug|info|warn|error)$",
    "default": "info"
  },
  "logging_slow_queries": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "logging_slow_query_threshold": {
    "type": "number",
    "required": false,
    "min": 100,
    "max": 10000,
    "default": 1000
  },
  "ssl_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "ssl_mode": {
    "type": "string",
    "required": false,
    "pattern": "^(disable|allow|prefer|require|verify_ca|verify_full)$",
    "default": "require"
  },
  "ssl_cert_file": {
    "type": "string",
    "required": false
  },
  "ssl_key_file": {
    "type": "string",
    "required": false
  },
  "ssl_ca_file": {
    "type": "string",
    "required": false
  },
  "monitoring_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "monitoring_metrics_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "monitoring_health_check_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "monitoring_alerting_enabled": {
    "type": "boolean",
    "required": false,
    "default": false
  },
  "maintenance_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "maintenance_vacuum_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "maintenance_analyze_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "maintenance_autovacuum_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "clustering_enabled": {
    "type": "boolean",
    "required": false,
    "default": false
  },
  "clustering_nodes": {
    "type": "string",
    "required": false
  },
  "clustering_consistency_level": {
    "type": "string",
    "required": false,
    "pattern": "^(one|quorum|all)$",
    "default": "quorum"
  },
  "cache_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "cache_type": {
    "type": "string",
    "required": false,
    "pattern": "^(redis|memcached)$",
    "default": "redis"
  },
  "cache_host": {
    "type": "string",
    "required": false,
    "default": "localhost"
  },
  "cache_port": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 65535,
    "default": 6379
  },
  "cache_ttl": {
    "type": "number",
    "required": false,
    "min": 0,
    "max": 86400,
    "default": 3600
  }
} 