{
  "type": "object",
  "properties": {
    "app_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "Application name"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Application version"
    },
    "port": {
      "type": "number",
      "min": 1,
      "max": 65535,
      "default": 3000,
      "description": "Server port"
    },
    "host": {
      "type": "string",
      "default": "0.0.0.0",
      "description": "Server host"
    },
    "timeout": {
      "type": "number",
      "min": 1000,
      "max": 300000,
      "default": 30000,
      "description": "Request timeout in milliseconds"
    },
    "body_limit": {
      "type": "string",
      "pattern": "^[0-9]+[KMGTPEZYkmgtpezy]i?$|^[0-9]+[kmgtpezy]b$",
      "description": "Request body size limit"
    },
    "database_url": {
      "type": "string",
      "pattern": "^[a-zA-Z]+://.*$",
      "description": "Database connection URL"
    },
    "database_pool_size": {
      "type": "number",
      "min": 1,
      "max": 100,
      "default": 10,
      "description": "Database connection pool size"
    },
    "database_timeout": {
      "type": "number",
      "min": 1000,
      "max": 30000,
      "default": 5000,
      "description": "Database connection timeout"
    },
    "jwt_secret": {
      "type": "string",
      "minLength": 32,
      "maxLength": 256,
      "description": "JWT signing secret"
    },
    "jwt_expires_in": {
      "type": "string",
      "pattern": "^[0-9]+[smhd]$",
      "description": "JWT token expiration"
    },
    "bcrypt_rounds": {
      "type": "number",
      "min": 8,
      "max": 16,
      "default": 12,
      "description": "BCrypt hashing rounds"
    },
    "log_level": {
      "type": "string",
      "pattern": "^(debug|info|warn|error)$",
      "default": "info",
      "description": "Logging level"
    },
    "log_format": {
      "type": "string",
      "pattern": "^(json|pretty|simple)$",
      "default": "json",
      "description": "Logging format"
    },
    "log_file": {
      "type": "string",
      "description": "Log file path"
    },
    "cors_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable CORS"
    },
    "cors_origins": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Allowed CORS origins"
    },
    "rate_limit_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable rate limiting"
    },
    "rate_limit_window": {
      "type": "number",
      "min": 60000,
      "max": 3600000,
      "default": 900000,
      "description": "Rate limit window in milliseconds"
    },
    "rate_limit_max": {
      "type": "number",
      "min": 10,
      "max": 10000,
      "default": 100,
      "description": "Maximum requests per window"
    },
    "health_check_path": {
      "type": "string",
      "default": "/health",
      "description": "Health check endpoint"
    },
    "metrics_enabled": {
      "type": "boolean",
      "default": false,
      "description": "Enable metrics collection"
    },
    "metrics_port": {
      "type": "number",
      "min": 1,
      "max": 65535,
      "default": 9090,
      "description": "Metrics server port"
    },
    "redis_url": {
      "type": "string",
      "pattern": "^redis://.*$",
      "description": "Redis connection URL"
    },
    "cache_ttl": {
      "type": "number",
      "min": 0,
      "max": 86400,
      "default": 3600,
      "description": "Cache TTL in seconds"
    }
  },
  "required": ["app_name", "version"]
} 