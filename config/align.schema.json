{
  "app_name": {
    "type": "string",
    "required": true,
    "minLength": 1,
    "maxLength": 50
  },
  "version": {
    "type": "string",
    "required": true,
    "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
  },
  "port": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 65535,
    "default": 8000
  },
  "host": {
    "type": "string",
    "required": false,
    "default": "0.0.0.0"
  },
  "workers": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 32,
    "default": 4
  },
  "timeout": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 300,
    "default": 30
  },
  "database_url": {
    "type": "string",
    "required": false,
    "pattern": "^[a-zA-Z]+://.*$"
  },
  "database_pool_size": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 100,
    "default": 10
  },
  "database_timeout": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 60,
    "default": 5
  },
  "secret_key": {
    "type": "string",
    "required": false,
    "minLength": 32,
    "maxLength": 256
  },
  "jwt_expires_in": {
    "type": "string",
    "required": false,
    "pattern": "^[0-9]+[smhd]$"
  },
  "password_salt_rounds": {
    "type": "number",
    "required": false,
    "min": 8,
    "max": 16,
    "default": 12
  },
  "log_level": {
    "type": "string",
    "required": false,
    "pattern": "^(DEBUG|INFO|WARNING|ERROR)$",
    "default": "INFO"
  },
  "log_format": {
    "type": "string",
    "required": false,
    "pattern": "^(json|pretty|simple)$",
    "default": "json"
  },
  "log_file": {
    "type": "string",
    "required": false
  },
  "cors_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "cors_origins": {
    "type": "array",
    "required": false,
    "items": {
      "type": "string"
    }
  },
  "rate_limit_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "rate_limit_window": {
    "type": "number",
    "required": false,
    "min": 60,
    "max": 3600,
    "default": 900
  },
  "rate_limit_max": {
    "type": "number",
    "required": false,
    "min": 10,
    "max": 10000,
    "default": 100
  },
  "health_check_path": {
    "type": "string",
    "required": false,
    "default": "/health"
  },
  "metrics_enabled": {
    "type": "boolean",
    "required": false,
    "default": false
  },
  "metrics_port": {
    "type": "number",
    "required": false,
    "min": 1,
    "max": 65535,
    "default": 9090
  },
  "redis_url": {
    "type": "string",
    "required": false,
    "pattern": "^redis://.*$"
  },
  "cache_ttl": {
    "type": "number",
    "required": false,
    "min": 0,
    "max": 86400,
    "default": 3600
  }
} 