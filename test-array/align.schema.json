{
  "app_name": {
    "type": "string",
    "required": true,
    "minLength": 1,
    "maxLength": 50
  },
  "version": {
    "type": "string",
    "required": true,
    "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
  },
  "public_url": {
    "type": "string",
    "required": false,
    "default": "/"
  },
  "build_path": {
    "type": "string",
    "required": false,
    "default": "build"
  },
  "source_map": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "minify": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "gzip": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "api_base_url": {
    "type": "string",
    "required": false,
    "pattern": "^https?://.*$"
  },
  "api_timeout": {
    "type": "number",
    "required": false,
    "min": 1000,
    "max": 300000,
    "default": 30000
  },
  "api_retry_attempts": {
    "type": "number",
    "required": false,
    "min": 0,
    "max": 10,
    "default": 3
  },
  "api_retry_delay": {
    "type": "number",
    "required": false,
    "min": 100,
    "max": 10000,
    "default": 1000
  },
  "feature_flags_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "feature_flags_api_url": {
    "type": "string",
    "required": false,
    "pattern": "^https?://.*$"
  },
  "analytics_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "analytics_id": {
    "type": "string",
    "required": false
  },
  "analytics_debug": {
    "type": "boolean",
    "required": false,
    "default": false
  },
  "analytics_track_page_views": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "analytics_track_events": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "cdn_enabled": {
    "type": "boolean",
    "required": false,
    "default": false
  },
  "cdn_base_url": {
    "type": "string",
    "required": false,
    "pattern": "^https?://.*$"
  },
  "cdn_version": {
    "type": "string",
    "required": false,
    "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$|^v[0-9]+$"
  },
  "lazy_loading_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "code_splitting_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "preload_critical_chunks": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "service_worker_enabled": {
    "type": "boolean",
    "required": false,
    "default": false
  },
  "csp_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "csp_report_only": {
    "type": "boolean",
    "required": false,
    "default": false
  },
  "csp_report_uri": {
    "type": "string",
    "required": false,
    "pattern": "^https?://.*$"
  },
  "error_tracking_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "error_tracking_dsn": {
    "type": "string",
    "required": false
  },
  "error_tracking_environment": {
    "type": "string",
    "required": false,
    "pattern": "^(development|staging|production)$"
  },
  "dev_tools_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  },
  "dev_tools_port": {
    "type": "number",
    "required": false,
    "min": 1024,
    "max": 65535,
    "default": 3001
  },
  "hot_reload_enabled": {
    "type": "boolean",
    "required": false,
    "default": true
  }
} 